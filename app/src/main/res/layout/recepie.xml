<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_marginTop="@dimen/rele_margin_top"
        android:layout_marginLeft="@dimen/card_mleft"
        android:layout_marginRight="@dimen/card_mright"
        android:elevation="@dimen/card_elev"
        app:cardBackgroundColor="@color/lightyellow"
        app:cardCornerRadius="@dimen/card_radius"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recepietext"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"/>
    </android.support.v7.widget.CardView>



</LinearLayout>